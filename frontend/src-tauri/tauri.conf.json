{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Telegram Assistant",
  "version": "0.1.0",
  "identifier": "tg.assistant",
  "build": {
    "beforeBuildCommand": "VITE_TAURI=1 npm run build",
    "beforeDevCommand": "VITE_TAURI=1 npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Telegram Assistant",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns"
    ],
    "macOS": {
      "exceptionDomain": "185.250.149.23"
    }
  }
}

